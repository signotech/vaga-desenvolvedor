        "/api/applications-count": {
            "get": {
                "tags": [
                    "Jobs"
                ],
                "summary": "Retorna a contagem de candidaturas por vaga",
                "operationId": "cb5f65dd9eac9c733bac52a5f1004d2e",
                "responses": {
                    "200": {
                        "description": "Contagem de candidaturas",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                },
                                "example": {
                                    "1": 10,
                                    "2": 5
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/jobs/{jobId}/applicants": {
            "get": {
                "tags": [
                    "Jobs"
                ],
                "summary": "Lista candidatos para uma vaga",
                "operationId": "5f5e624f7e77a535e1d66e418d8156ea",
                "parameters": [
                    {
                        "name": "jobId",
                        "in": "path",
                        "description": "ID da vaga",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lista de candidatos",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "name": {
                                                "type": "string",
                                                "example": "Fulano da Silva"
                                            },
                                            "email": {
                                                "type": "string",
                                                "example": "fulano@example.com"
                                            },
                                            "created_at": {
                                                "type": "string",
                                                "format": "date-time",
                                                "example": "2025-06-13T12:00:00Z"
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/jobs/{jobId}/apply": {
            "post": {
                "tags": [
                    "Jobs"
                ],
                "summary": "Candidatar-se a uma vaga",
                "operationId": "ac912cf748e3704d5a6342e180e2bca4",
                "parameters": [
                    {
                        "name": "jobId",
                        "in": "path",
                        "description": "ID da vaga para candidatura",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Candidatura realizada com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Candidatura realizada com sucesso!"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "Usuário já se candidatou",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Você já se candidatou a esta vaga."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Não autorizado"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/jobs/applied/list": {
            "get": {
                "tags": [
                    "Jobs"
                ],
                "summary": "Lista IDs das vagas em que o usuário se candidatou",
                "operationId": "f7c52239265f52615382d30aa00b1e03",
                "responses": {
                    "200": {
                        "description": "Lista de IDs de vagas",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "job_ids": {
                                            "type": "array",
                                            "items": {
                                                "type": "integer",
                                                "example": 1
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Usuário não autorizado para consultar candidaturas",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Apenas candidatos podem consultar suas candidaturas."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/users": {
            "post": {
                "tags": [
                    "Usuários"
                ],
                "summary": "Cria um novo usuário",
                "operationId": "592819a0265360b2014512d6dbfaf0e7",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "email",
                                    "password",
                                    "password_confirmation",
                                    "user_type"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Mateus Silva"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "mateus@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "123456"
                                    },
                                    "password_confirmation": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "123456"
                                    },
                                    "user_type": {
                                        "type": "integer",
                                        "example": 1
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Usuário criado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "user": {
                                            "type": "object"
                                        },
                                        "token": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Erro de validação"
                    }
                }
            }
        },
