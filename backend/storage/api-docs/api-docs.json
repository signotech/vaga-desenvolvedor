                    },
                    "type": {
                        "type": "string",
                        "example": "CLT"
                    },
                    "paused": {
                        "type": "boolean",
                        "example": false
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "User": {
                "title": "Usuário",
                "required": [
                    "id",
                    "name",
                    "email",
                    "user_type"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "Mateus Silva"
                    },
                    "email": {
                        "type": "string",
                        "example": "mateus@example.com"
                    },
                    "user_type": {
                        "description": "1 = candidato, 2 = admin",
                        "type": "integer",
                        "example": 1
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            }
