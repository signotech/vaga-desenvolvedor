                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID da vaga",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Detalhes da vaga",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Job"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Vaga não encontrada"
                    }
                }
            },
            "put": {
                "tags": [
                    "Jobs"
                ],
                "summary": "Atualiza uma vaga",
                "operationId": "66762b778fbd20dd4fbd09628dabba17",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID da vaga a ser atualizada",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "title",
                                    "salary",
                                    "company",
                                    "type"
                                ],
                                "properties": {
                                    "title": {
                                        "type": "string",
                                        "example": "Desenvolvedor PHP Senior"
                                    },
                                    "salary": {
                                        "type": "number",
                                        "format": "float",
                                        "example": 4500.75
                                    },
                                    "company": {
                                        "type": "string",
                                        "example": "Empresa X"
                                    },
                                    "type": {
                                        "type": "string",
                                        "enum": [
                                            "CLT",
                                            "PJ",
                                            "Freelance"
                                        ],
                                        "example": "CLT"
                                    },
                                    "paused": {
                                        "type": "boolean",
                                        "example": false
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Vaga atualizada",
